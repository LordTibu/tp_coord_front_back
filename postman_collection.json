{
  "info": {
    "_postman_id": "5cf4a4e0-7d78-4c67-9d73-54cfa0a7b8b4",
    "name": "tp_coord_front_back",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const data = pm.response.json();",
              "if (data && data.access_token) {",
              "  pm.collectionVariables.set('jwt_token', data.access_token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"your_username_or_email\",\n  \"password\": \"your_password\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Auth - Me",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            { "key": "token", "value": "{{jwt_token}}", "type": "string" }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "Products - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/product",
          "host": ["{{baseUrl}}"],
          "path": ["api", "product"]
        }
      }
    },
    {
      "name": "Products - Get",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/product/{{product_id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "product", "{{product_id}}"]
        }
      }
    },
    {
      "name": "Products - Create",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            { "key": "token", "value": "{{jwt_token}}", "type": "string" }
          ]
        },
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample product\",\n  \"comment\": \"Created from Postman\",\n  \"quantity\": 10,\n  \"company_id\": {{company_id}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/product",
          "host": ["{{baseUrl}}"],
          "path": ["api", "product"]
        }
      }
    },
    {
      "name": "Products - Update",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            { "key": "token", "value": "{{jwt_token}}", "type": "string" }
          ]
        },
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated product\",\n  \"comment\": \"Updated from Postman\",\n  \"quantity\": 15\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/product/{{product_id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "product", "{{product_id}}"]
        }
      }
    },
    {
      "name": "Products - Delete",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            { "key": "token", "value": "{{jwt_token}}", "type": "string" }
          ]
        },
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/product/{{product_id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "product", "{{product_id}}"]
        }
      }
    },
    {
      "name": "Companies - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/company",
          "host": ["{{baseUrl}}"],
          "path": ["api", "company"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5005" },
    { "key": "jwt_token", "value": "" },
    { "key": "product_id", "value": "1" },
    { "key": "company_id", "value": "1" }
  ]
}
